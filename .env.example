# ==========================================
# Logan Virtual - Environment Variables
# ==========================================
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control!

# --- Database ---
POSTGRES_USER=logan
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=logan_virtual
DATABASE_URL=postgresql://logan:CHANGE_ME_STRONG_PASSWORD@postgres:5432/logan_virtual

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- JWT Auth ---
# Generate with: openssl rand -hex 64
JWT_SECRET_KEY=GENERATE_WITH_openssl_rand_hex_64
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Email (Mailpit in dev, real SMTP in prod) ---
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=no-reply@logan.cl
SMTP_FROM_NAME=Logan Virtual

# --- File Storage ---
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=/app/storage
# For production S3:
# S3_BUCKET_NAME=logan-documents
# S3_REGION=us-east-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# --- AI Assistant ---
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
KIMI_API_KEY=
GEMINI_API_KEY=
BRAVE_SEARCH_API_KEY=

# --- Scraper ---
SCRAPER_USER_AGENT=LoganVirtual/1.0
SCRAPER_RATE_LIMIT_SECONDS=1
SCRAPER_MODE=mock

# --- CORS (comma-separated origins for production) ---
CORS_ORIGINS=

# --- App ---
APP_NAME=Logan Virtual
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Santiago

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
